{
  "name": "todolist-webpack",
  "version": "1.0.0",
  "description": "My todolist app using webpack",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve",
    "test": "jest --coverage",
    "dev": "webpack serve",
    "linters": "hint . && stylelint \"**/*.css\" && eslint .",
    "build": "webpack --mode=production --node-env=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "remove:gh-pages": "git push origin :gh-pages",
    "checkout:temp": "git branch -f temp && git branch -D temp && git checkout -b temp",
    "add:dist": "git add dist -f && git commit -m 'Add dist'",
    "push:gh-pages": "git subtree push --prefix dist origin gh-pages",
    "deploy:first": "npm run checkout:temp && npm run build && npm run add:dist && npm run push:gh-pages",
    "deploy": "npm run remove:gh-pages && npm run deploy:first"
  },
  "keywords": [
    "Microverse"
  ],
  "author": "oyhpnayiaw@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@webpack-cli/generators": "^3.0.1",
    "babel-eslint": "10.x",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.3",
    "eslint": "7.x",
    "eslint-config-airbnb-base": "14.x",
    "eslint-plugin-import": "2.x",
    "hint": "7.x",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.4.0",
    "jest-environment-jsdom": "^29.4.0",
    "prettier": "^2.8.3",
    "style-loader": "^3.3.1",
    "stylelint": "13.x",
    "stylelint-config-standard": "21.x",
    "stylelint-csstree-validator": "1.x",
    "stylelint-scss": "3.x",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {}
}
